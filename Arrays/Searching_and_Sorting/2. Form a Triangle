#traverse through every element and CHECK

T.C = O(NLOGN),S.C = O(1)

def possibleToMakeTriangle(arr):
    arr.sort()
    for i in range(len(arr)-1,1,-1):
        l=0
        r=i-1
        while(l<r):
            if arr[l]+arr[r]>arr[i]: #sum of 2sides is > 3rd side
                return 1
            else:
                l+=1
    return 0



#BEST CODE

T.C = O(nlogn) , S.C = 0(1)

def possibleToMakeTriangle(arr):
    # Sort the array in non-decreasing order.
    arr.sort()
    n = len(arr)
    for i in range(n-2):
        if (arr[i] + arr[i + 1] > arr[i + 2]):
            return True
    return False
